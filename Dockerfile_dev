FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

# Install Python 3.11 via deadsnakes
RUN apt-get update && apt-get install -y \
    software-properties-common && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && apt-get install -y \
    python3.11 python3.11-distutils python3.11-venv python3-pip \
    curl git build-essential && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Set python aliases
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1 && \
    python3 -m pip install --upgrade pip

# Install pipenv
RUN pip3 install pipenv

# Set the working directory
WORKDIR /app

# Copy Pipfile and Pipfile.lock
COPY Pipfile Pipfile.lock ./

# Install dependencies
RUN pipenv install --dev --ignore-pipfile

# Register the Jupyter kernel
RUN pipenv run python -m ipykernel install --name=pipenv-llm --display-name "Python (Pipenv LLM)" --sys-prefix

# Expose Jupyter port
EXPOSE 8888

# Run Jupyter
CMD ["pipenv", "run", "jupyter", "notebook", "--ip=0.0.0.0", "--allow-root", "--NotebookApp.token=", "--NotebookApp.password="]
